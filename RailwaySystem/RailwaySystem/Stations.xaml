                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <ComboBox x:Name="stationsbox" Height="25" Margin="15,110" Width="171" />
