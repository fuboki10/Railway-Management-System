<Window x:Class="RailwaySystem.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePassword" Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="train_icon.ico">
    <Grid>
        <Button Name="Confirm" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="143,168,0,0" Click="Confirm_Click" Background="#FF080226" Foreground="#FFF8F5F5"/>
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="32,69,0,0" VerticalAlignment="Top"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="32,112,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="OldPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,69,0,0" Height="26" Width="100" KeyDown="OldPassword_KeyDown"/>
        <PasswordBox Name="NewPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,112,0,0" Height="26" Width="100" KeyDown="NewPassword_KeyDown"/>

    </Grid>
</Window>
