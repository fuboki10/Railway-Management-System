<UserControl x:Class="RailwaySystem.CancelTicketButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RailwaySystem"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="900">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="76,90,0,0" TextWrapping="Wrap" Text="Type Ticket ID" VerticalAlignment="Top" Width="216" RenderTransformOrigin="0.489,0.599"/>
        <Button x:Name="CancelTicketButton1" Content="Cancel Ticket" HorizontalAlignment="Left" Margin="76,135,0,0" VerticalAlignment="Top" Width="216" Height="36"
                Background="#FF080226" Foreground="#FFFEFBFB" BorderBrush="#FF080226" Click="CancelTicketButton1_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Ticket ID" HorizontalAlignment="Left" Margin="76,45,0,0" VerticalAlignment="Top" Width="117"/>

    </Grid>
</UserControl>
